capital = input("The capital of France? ")
if capital.lower().strip() == "paris":
    print("That's correct!")
else:
    print("Try again!")
    
quiz = { "Hungary": "Budapest", "Switzerland": "Bern", "Spain": "Madrid", "Italy": "Rome", "Portugal": "Lisbon", "Belgium": "Brussels",
    "Germany": "Berlin", "Netherlands": "Amsterdam","France": "Paris", "Greece": "Athens",}

correct_answers = 0
for country, correct_capital in quiz.items():
    answer = input(f"What is the capital of {country}? ")
    if answer.strip().lower() == correct_capital.strip().lower():
        print("The answer is correct!")
        correct_answers += 1
    else:
        print(f"Wrong. The capital of {country} is {correct_capital}.")

print(f"You got {correct_answers} out of {len(quiz)} correct.")
if correct_answers == len(quiz):
    print("Excellent! You are outstanding!")
else:
    print("You can do it! Keep going forward!")