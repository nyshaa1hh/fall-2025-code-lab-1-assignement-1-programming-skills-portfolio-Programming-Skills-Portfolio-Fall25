capital = input("What is the capital of France? ")
if capital.strip().lower() == "paris":
    print("Correct answer!")
else:
    print("Try again!")
    
  
questions = {"France": "Paris","Germany": "Berlin", "Italy": "Rome","Spain": "Madrid","Portugal": "Lisbon","Netherlands": "Amsterdam",
"Belgium": "Brussels","Switzerland": "Bern","Austria": "Vienna","Greece": "Athens"}

correct_answers = 0
for country, correct_capital in questions.items():
    answer = input("What is the capital of {country}? ")
    if answer.strip().lower() == correct_capital.strip().lower():
        print("Correct answer!")
        correct_answers += 1
    else:
        print("Wrong. The capital of (country) is (correct_capital).")

print("You got (correct_answers) out of len(questions) correct.")
if correct_answers == len(questions):
    print("Excellent! You got a perfect score!")
else:
    print("You can do it!. keep going forward!")